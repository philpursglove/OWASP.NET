@using _04_InsecureDirectObjectReference.Models
@model _04_InsecureDirectObjectReference.Models.Account
@{
    ViewBag.Title = "Account";
}

<h2>Account</h2>

<div class="row">
    Account number: @Html.DisplayFor(m => Model.AccountNumber)
</div>
<div class="row">
    Account Holder: @Html.DisplayFor(m => Model.Username)
</div>
<div class="row">
    @if (Model.Transactions != null)
    {
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Date
                </th>
                <th>
                    Amount
                </th>
            </tr>
            </thead>
            <tbody>
            @foreach (AccountTransaction transaction in Model.Transactions)
            {
                <tr>
                    <td>@Html.DisplayFor(m => transaction.Description)</td>
                    <td>@string.Format("{0:dd MMM yyyy}", transaction.TransactionDate)</td>
                    <td>@Html.DisplayFor(m => transaction.Amount)</td>
                </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <div>No transactions to display.</div>
    }
</div>